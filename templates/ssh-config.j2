{% for host in groups['managed'] %}
Host {{ host }} {{ hostvars[host]['ansible_host'] | mandatory }}
  Hostname {{ hostvars[host]['ansible_host'] | mandatory }}
  User {{ hostvars[host]['ansible_user'] | mandatory }}
  IdentityFile {{ hostvars[host]['ansible_ssh_private_key_file'] | mandatory }}
  ForwardAgent yes
  LocalForward localhost:590{{loop.index}} localhost:590{{loop.index}}
  StrictHostKeyChecking no
{% endfor %}
